{
  "type": "APL",
  "version": "1.0",
  "theme": "dark",
  "import": [],
  "resources": [],
  "styles": {},
  "layouts": {},
  "mainTemplate": {
    "parameters": [ "payload" ],
    "items": [
      {
        "type": "Container",
        "height": "100vw",
        "width": "100vw",
        "alignItems": "center",
        "items": [
          {
            "type": "Container",
            "direction": "row",
            "width": "40vw",
            "items": [
              {
                "paddingTop": "2vw",
                "paddingBottom": "2vw",
                "paddingLeft": "2vw",
                "type": "Text",
                "fontSize": "2vw",
                "text": "${payload.eventData.groupName}"
              },
              {
                "paddingTop": "2vw",
                "type": "Text",
                "fontSize": "2vw",
                "text": "   |   "
              },
              {
                "paddingTop": "2vw",
                "type": "Text",
                "fontSize": "2vw",
                "text": "${payload.eventData.eventDate}"
              }
            ]
          },
          {
            "paddingTop": "1vw",
            "paddingBottom": "2vw",
            "type": "Text",
            "text": "${payload.eventData.eventTitle}",
            "width": "80vw",
            "textAlign": "center"
          },
          {
            "type": "Image",
            "source": "${payload.eventData.backgroundUrl}",
            "scale": "best-fill",
            "height": "45vw",
            "width": "100vw",
            "grow": 0.2
          }
        ]
      }
    ]
  }
}