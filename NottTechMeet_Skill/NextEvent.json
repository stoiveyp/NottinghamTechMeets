{
  "type": "APL",
  "version": "1.0",
  "theme": "dark",
  "import": [{
    "name": "alexa-styles",
    "version" : "1.0.0"
  }],
  "resources": [],
  "styles": {},
  "layouts": {},
  "mainTemplate": {
    "parameters": [ "payload" ],
    "items": [
      {
        "type": "Container",
        "height": "100vw",
        "width": "100vw",
        "alignItems": "center",
        "items": [
          {
            "type": "Image",
            "position": "absolute",
            "source": "${payload.eventData.backgroundUrl}",
            "scale": "best-fit",
            "height": "100vw",
            "width": "100vw",
            "overlayColor": "#00000088"
          },
          {
            "type": "Text",
            "paddingTop": "10vw",
            "style": "textStyleDetail",
            "textAlignVertical": "center",
            "text": "${payload.eventData.groupName}  |  ${payload.eventData.eventDate}"
          },
          {
            "type": "Text",
            "textAlign": "center",
            "textAlignVertical": "center",
            "text": "${payload.eventData.eventTitle}",
            "style": "textStyleDisplay4"
          }
        ]
      }
    ]
  }
}