{
  "type": "APL",
  "version": "1.0",
  "theme": "dark",
  "import": [
    {
      "name": "alexa-styles",
      "version": "1.0.0"
    }
  ],
  "resources": [],
  "styles": {},
  "layouts": {},
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Container",
        "height": "100vw",
        "width": "100vw",
        "alignItems": "center",
        "items": [
          {
            "type": "Container",
            "width": "100vw",
            "height": "100vw",
            "alignItems": "center",
            "items": [
              {
                "type": "Image",
                "position": "absolute",
                "source": "${payload.eventData.backgroundUrl}",
                "scale": "best-fit",
                "height": "100vw",
                "width": "100vw",
                "overlayColor": "#00000088"
              },
              {
                "paddingTop": "2vw",
                "type": "Text",
                "text": "${payload.eventData.groupName}",
                "textAlignVertical": "center"
              },
              {
                "type": "ScrollView",
                "height": "80vw",
                "item": [
                  {
                    "type": "Text",
                    "paddingLeft": "3vw",
                    "paddingRight": "3vw",
                    "paddingBottom": "3vw",
                    "id": "groupDescription",
                    "text": "${payload.eventData.properties.text}",
                    "speech": "${payload.eventData.properties.speech}",
                    "grow": 0.3
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}